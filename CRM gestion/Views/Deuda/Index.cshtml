@model List<CRM_gestion.Models.Deuda>

<h1>Listado de Deudas</h1>

<a asp-action="Create" class="btn btn-primary mb-3">
    <i class="fas fa-plus"></i> Nueva Deuda
</a>

<table class="table table-striped table-hover">
    <thead class="table-dark text-center">
        <tr>
            <th>ID</th>
            <th>Cliente</th>
            <th>Monto</th>
            <th>Fecha de Vencimiento</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var deuda in Model)
        {
            <tr>
                <td class="text-center">@deuda.Id</td>
                <td>@deuda.Cliente?.Nombre ?? "Sin Asignar"</td>
                <td class="text-center">@deuda.Monto:C</td>
                <td class="text-center">@deuda.FechaVencimiento.ToShortDateString()</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@deuda.Id" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@deuda.Id" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>