@model IEnumerable<Deuda>

<h1>Listado de Deudas</h1>

<table class="table">
    <thead>
        <tr>
            <th>Cliente</th>
            <th>Monto</th>
            <th>Fecha de Vencimiento</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var deuda in Model)
        {
            <tr>
                <td>@(deuda.Cliente != null ? deuda.Cliente.Nombre : "Cliente No Disponible")</td>
                <td>@deuda.Monto</td>
                <td>@deuda.FechaVencimiento.ToShortDateString()</td>
                <td>
                    <a href="@Url.Action("Details", new { id = deuda.Id })">Detalles</a> |
                    <a href="@Url.Action("CreateCobros", new { id = deuda.Id })">Registrar Cobro</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Crear Nueva Deuda</a>