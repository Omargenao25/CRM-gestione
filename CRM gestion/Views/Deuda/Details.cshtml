@model Deuda

<h1>Detalles de la Deuda</h1>

<p><strong>Cliente:</strong> @Model.Cliente.Nombre</p>
<p><strong>Monto:</strong> @Model.Monto</p>
<p><strong>Fecha de Vencimiento:</strong> @Model.FechaVencimiento.ToShortDateString()</p>

<h2>Cobros Asociados</h2>
<table class="table">
    <thead>
        <tr>
            <th>Monto Cobrado</th>
            <th>Fecha del Cobro</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cobro in Model.Cobros)
        {
            <tr>
                <td>@cobro.MontoCobrado</td>
                <td>@cobro.FechaCobro.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Index")" class="btn btn-secondary">Volver</a>
