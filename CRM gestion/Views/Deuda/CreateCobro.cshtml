@model Cobro

<h1>Registrar Cobro</h1>

<form asp-action="CreateCobro" method="post">
    <input type="hidden" name="IdDeuda" value="@ViewData["DeudaId"]" />

    <div class="form-group">
        <label for="MontoCobrado">Monto Cobrado</label>
        <input asp-for="MontoCobrado" class="form-control" />
        <span asp-validation-for="MontoCobrado" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
</form>
