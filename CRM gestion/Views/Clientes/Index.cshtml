@model IEnumerable<CRM_gestion.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<h1 class="text-primary">Listado de Clientes</h1>

<div class="d-flex justify-content-between align-items-center mb-3">
    <p class="lead">Gestión de los clientes registrados en el sistema.</p>
    <a asp-action="Create" class="btn btn-success btn-sm">
        <i class="bi bi-person-plus"></i> Crear Nuevo Cliente
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-header bg-secondary text-white">
        <h4>Clientes</h4>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                        <th>@Html.DisplayNameFor(model => model.Apellido)</th>
                        <th>@Html.DisplayNameFor(model => model.CorreoElectronico)</th>
                        <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td>@item.Apellido</td>
                            <td>@item.CorreoElectronico</td>
                            <td>@item.Telefono</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.ClienteId" class="btn btn-outline-warning btn-sm me-2">
                                        <i class="bi bi-pencil-square"></i> Editar
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.ClienteId" class="btn btn-outline-info btn-sm me-2">
                                        <i class="bi bi-info-circle"></i> Detalles
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.ClienteId" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>