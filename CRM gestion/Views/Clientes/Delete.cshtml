@model CRM_gestion.Models.Cliente

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<h1 class="text-danger">Eliminar Cliente</h1>

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white">
        <h4>Confirmación de Eliminación</h4>
    </div>
    <div class="card-body">
        <p class="fw-bold">¿Estás seguro de que deseas eliminar este cliente? Esta acción no se puede deshacer.</p>
        <dl class="row">
            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

            <dt class="col-sm-3">Apellido</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Apellido)</dd>

            <dt class="col-sm-3">Correo Electrónico</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CorreoElectronico)</dd>

            <dt class="col-sm-3">Teléfono</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefono)</dd>
        </dl>
    </div>
    <div class="card-footer d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver a la Lista
        </a>
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="ClienteId" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Confirmar Eliminación
            </button>
        </form>
    </div>
</div>