<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/site.css" />
</head>
<body>
    <header>
        <h1>CRM - Sistema de Gestión de Clientes</h1>
        <nav>
            <ul>
                <li><a href="@Url.Action("Index", "Home")" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">Inicio</a></li>
                <li><a href="@Url.Action("Index", "Cliente")" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Cliente" ? "active" : "")">Clientes</a></li>
                <li><a href="@Url.Action("Index", "Deuda")" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Deuda" ? "active" : "")">Consultar Deudas</a></li>
            </ul>
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer>
        <p>&copy; 2024 CRM</p>
    </footer>

    <!-- Scripts de jQuery y jQuery Validation para las validaciones en cliente -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate.unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

    @RenderSection("Scripts", false)
</body>
</html>