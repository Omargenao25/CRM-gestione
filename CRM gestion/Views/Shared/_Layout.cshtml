<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CRM Gestión</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="d-flex flex-column min-vh-100" style="background-color: #f8f9fa;">

    <div class="d-flex flex-grow-1">
        <!-- Sidebar -->
        <div class="bg-dark text-white p-3" style="width: 250px; min-height: 100vh;">
            <h4 class="text-center text-white mb-4">CRM Gestión</h4>
            <ul class="nav flex-column mt-4">
                <li class="nav-item mb-2">
                    <a href="@Url.Action("Index", "Home")" class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active fw-bold" : "")">
                        <i class="bi bi-house-door"></i> Inicio
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a href="@Url.Action("Index", "Clientes")" class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Clientes" ? "active fw-bold" : "")">
                        <i class="bi bi-people"></i> Clientes
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a href="@Url.Action("Index", "Deudas")" class="nav-link text-white @(ViewContext.RouteData.Values["controller"]?.ToString() == "Deudas" ? "active fw-bold" : "")">
                        <i class="bi bi-currency-dollar"></i> Consultar Deudas
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="flex-grow-1 p-4">
            @RenderBody()
        </div>
    </div>

    <footer class="bg-dark text-white text-center py-3 mt-auto">
        <p class="m-0">&copy; 2025 CRM Gestión</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>