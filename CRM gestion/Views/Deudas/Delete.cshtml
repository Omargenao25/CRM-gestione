@model CRM_gestion.Models.Deuda

@{
    ViewData["Title"] = "Eliminar Deuda";
}

@{
    var errorMessage = TempData["ErrorMessage"] as string;
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">
        @errorMessage
    </div>
}

<div class="container mt-4">
    <h1 class="display-6 text-center text-danger">Eliminar Deuda</h1>
    <p class="text-center text-warning">¿Está seguro de que desea eliminar esta deuda? Esta acción no se puede deshacer.</p>
    <hr />

    <!-- Información de la Deuda -->
    <div class="card mb-4 shadow">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Información de la Deuda</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Monto</dt>
                <dd class="col-sm-8">@String.Format("{0:C}", Model.Monto)</dd>

                <dt class="col-sm-4">Fecha de Creación</dt>
                <dd class="col-sm-8">@Model.FechaCreación.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-4">Fecha de Vencimiento</dt>
                <dd class="col-sm-8">@Model.FechaVencimiento.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-4">Cliente</dt>
                <dd class="col-sm-8">
                    @(Model.Cliente != null
                        ? $"{Model.Cliente.Nombre} {Model.Cliente.Apellido}"
                        : "Cliente no asociado")
                </dd>
            </dl>
        </div>
    </div>

    <!-- Formulario de Confirmación -->
    <div class="d-flex justify-content-center">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="DeudaId" />
            <button type="submit" class="btn btn-danger me-2">Eliminar</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</div>