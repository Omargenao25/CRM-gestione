@model CRM_gestion.Models.Deuda

@{
    ViewData["Title"] = "Crear Deuda";
}

<div class="container mt-4">
    <h1 class="display-6">Crear Nueva Deuda</h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Monto -->
                        <div class="form-group mb-3">
                            <label asp-for="Monto" class="form-label">Monto</label>
                            <input asp-for="Monto" class="form-control" placeholder="Ingrese el monto de la deuda" />
                            <span asp-validation-for="Monto" class="text-danger"></span>
                        </div>

                        <!-- Fecha de Creación -->
                        <div class="form-group mb-3">
                            <label asp-for="FechaCreación" class="form-label">Fecha de Creación</label>
                            <input asp-for="FechaCreación" type="date" class="form-control" />
                            <span asp-validation-for="FechaCreación" class="text-danger"></span>
                        </div>

                        <!-- Fecha de Vencimiento -->
                        <div class="form-group mb-3">
                            <label asp-for="FechaVencimiento" class="form-label">Fecha de Vencimiento</label>
                            <input asp-for="FechaVencimiento" type="date" class="form-control" />
                            <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
                        </div>

                        <!-- Cliente -->
                        <div class="form-group mb-3">
                            <label asp-for="ClienteId" class="form-label">Cliente</label>
                            <select asp-for="ClienteId" class="form-select" asp-items="ViewBag.ClienteId">
                                <option value="">Seleccione un cliente</option>
                            </select>
                            <span asp-validation-for="ClienteId" class="text-danger"></span>
                        </div>

                        <!-- Botones de Acción -->
                        <div class="form-group">
                            <input type="submit" value="Crear" class="btn btn-primary me-2" />
                            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}