@model CRM_gestion.Models.Deuda

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Deuda</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Monto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Monto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaCreación)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaCreación)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaVencimiento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaVencimiento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Nombre)
        </dd>
    </dl>
</div>

<div>
    <h4>Cobros Asociados</h4>
    <hr />
    @if (Model.Cobros != null && Model.Cobros.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Cobros.First().Monto)</th>
                    <th>@Html.DisplayNameFor(model => model.Cobros.First().FechaCobro)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cobro in Model.Cobros)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => cobro.Monto)</td>
                        <td>@Html.DisplayFor(modelItem => cobro.FechaCobro)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay cobros asociados a esta deuda.</p>
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.DeudaId">Edit</a> |
    <a asp-action="CreateCobro" asp-route-id="@Model?.DeudaId">Agregar Cobros</a> |
    <a asp-action="Index">Back to List</a>
</div>

